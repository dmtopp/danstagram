              <a href="/users/logout/"><button class="btn" type="button" name="button">Log Out</button></a>
            <% else %>
              <a href="/users/"><button class="btn" type="button" name="button">Log In or Sign Up</button></a>
            <% end %>
          </header>
          <%= yield %>
        </div>

      </div>

    </div>

  </body>
</html>
